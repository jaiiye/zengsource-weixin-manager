<?xml version="1.0" encoding="UTF-8"?>
<definitions>
	<definition>
		<name>BindingAdminAccount</name>
		<desc>为微信公众帐号绑定管理员微信号。</desc>
		<index>1</index>
		<nodes>
			<node>
				<name>bindingAdminCommandNode</name>
				<desc>管理员输入绑定</desc>
				<class>com.zengsource.askserver.weixin.manager.process.binding.BindingAmdinCommandNode
				</class>
				<msgType>text</msgType>
				<msgContent>13923626967</msgContent>
			</node>
			<node>
				<name>checkingPaasswordTextNode</name>
				<desc>管理员输入密码</desc>
				<class>com.zengsource.askserver.weixin.manager.process.binding.CheckingPaasswordTextNode
				</class>
				<msgType>text</msgType>
				<msgContent>.*</msgContent>
				<prompt>请输入操作密码（输入后请自行删除）</prompt>
			</node>
			<node>
				<name>settingAdminTextNode</name>
				<desc>管理员指定绑定的微信用户号</desc>
				<class>com.zengsource.askserver.weixin.manager.node.SettingAdminTextNode
				</class>
				<msgType>text</msgType>
				<msgContent>\d*</msgContent>
				<prompt>请输入要绑定的管理员用户号</prompt>
			</node>
		</nodes>
	</definition>
	<definition>
		<name>UserSubscription</name>
		<desc>有用户关注了微信公众号。</desc>
		<index>2</index>
		<nodes>
			<node>
				<name>subscribeNode</name>
				<desc>用户关注</desc>
				<class>com.zengsource.askserver.weixin.manager.process.SubscribeNode
				</class>
				<msgType>event</msgType>
				<event>subscribe</event>
			</node>
		</nodes>
	</definition>
	<definition>
		<name>UserUnsubscription</name>
		<desc>有用户取消关注微信公众号。</desc>
		<index>3</index>
		<nodes>
			<node>
				<name>unsubscribeNode</name>
				<desc>用户取消关注</desc>
				<class>com.zengsource.askserver.weixin.manager.process.UnsubscribeNode
				</class>
				<msgType>event</msgType>
				<event>unsubscribe</event>
			</node>
		</nodes>
	</definition>
	<definition>
		<name>SendingMessage</name>
		<desc>管理员回复用户消息。</desc>
		<index>4</index>
		<nodes>
			<node>
				<name>sendingMessageNode</name>
				<desc>管理员回复用户消息</desc>
				<class>com.zengsource.askserver.weixin.manager.process.sending.SendingMessageNode
				</class>
				<msgType>text</msgType>
				<msgContent>@\d*:.*</msgContent>
			</node>
		</nodes>
	</definition>
	<definition>
		<name>ReceivingMessage</name>
		<desc>接收用户发送的消息。</desc>
		<index>99</index>
		<nodes>
			<node>
				<name>receivingMessageNode</name>
				<desc>接收用户发送的消息</desc>
				<class>com.zengsource.askserver.weixin.manager.process.receiving.ReceivingMessageNode
				</class>
				<msgType>text</msgType>
				<msgContent>.*</msgContent>
			</node>
		</nodes>
	</definition>
</definitions>